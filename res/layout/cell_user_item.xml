<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/viewselector" >

    <TextView
        android:id="@+id/nameindex"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:background="@drawable/speaker_section_bg"
        android:gravity="center_vertical"
        android:text="A"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nameindex"
        android:padding="6dp" >

        <ImageView
            android:id="@+id/speakerimage"
            android:layout_width="64dip"
            android:layout_height="64dip"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@color/transport" />

        <TextView
            android:id="@+id/speakername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="70dp"
            android:singleLine="true"
            android:textColor="#2d2d2d"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/speakercomplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="25dp"
            android:singleLine="true"
            android:textColor="#868686"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/speakertitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/speakercomplay"
            android:layout_marginLeft="70dp"
            android:singleLine="true"
            android:textColor="#868686"
            android:textSize="15sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="30dp"
        android:background="#00000000"
        android:orientation="horizontal"
        android:padding="0dp" >

        <Button
            android:id="@+id/chioce3"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/reject_bg"
            android:text="@string/refuse"
            android:visibility="gone" />

        <Button
            android:id="@+id/chioce4"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/accept_bg"
            android:text="@string/accept"
            android:visibility="gone" />
    </LinearLayout>

</RelativeLayout>