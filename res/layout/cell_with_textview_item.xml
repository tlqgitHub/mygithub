<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/viewselector" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/nameindex"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:background="@drawable/speaker_section_bg"
        android:gravity="center_vertical"
        android:text="A"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/nameindex" >

        <ImageView
            android:id="@+id/speakerimage"
            android:layout_width="64dip"
            android:layout_height="64dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:background="@color/transport" />

        <TextView
            android:id="@+id/speakername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="76dp"
            android:layout_marginTop="5dp"
            android:singleLine="true"
            android:textColor="#2d2d2d"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/speakercomplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="76dp"
            android:layout_marginTop="30dp"
            android:singleLine="true"
            android:textColor="#868686"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/speakertitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="76dp"
            android:layout_marginTop="52dp"
            android:singleLine="true"
            android:textColor="#868686"
            android:textSize="15sp" />
    </RelativeLayout>

